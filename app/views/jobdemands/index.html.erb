<!DOCTYPE html>
<html>
<head>
</head>

<%= render layout: 'shared/search_box' do %>

<div class="contaner">
    <p id="notice"><%= notice %></p>

<h1 style="text-align:center">Listing Jobdemands</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Overview</th>
      <th>Reponsibility</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobdemands.each do |jobdemand| %>
      <tr>
        <td><%= jobdemand.title %></td>
        <td><%= jobdemand.overview %></td>
        <td><%= jobdemand.reponsibility %></td>
        <td><button class="btn btn-success"><%= link_to 'Show', jobdemand %></button> </td>
        <td><button class="btn btn-info"><%= link_to 'Edit', edit_jobdemand_path(jobdemand) %></button> </td>
        <td><button class="btn btn-danger"><%= link_to 'Destroy', jobdemand, method: :delete, data: { confirm: 'Are you sure?' } %></button> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-success"><%= link_to 'New Jobdemand', new_jobdemand_path %></button> 
<button class="btn btn-danger"><%= link_to 'Back', companies_path %></button> 

</div>
<% end %>

</html>

