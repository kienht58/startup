<% content_for(:title) do %>
  SEARCH
<% end %>

<%= form_for(@jobdemand, url: search_jobdemands_path,  html: { method: :get, class: 'form-horizontal', role: 'form'}) do |f| %>
  <%= render 'search_form', f: f %>
<% end %>

<%= render layout: 'shared/search_result_box' do %>
  <table class="table table-list ">
  <thead>
    <tr>
      <th>TITLE</th>
      <th>OVERVIEW</th>
      <th>COMPANY</th>
    </tr>
  </thead>
  <% @jobdemands.each do |jobdemand| %>
  <tbody>
  <tr>
    <td><%= link_to "#{jobdemand.title}", jobdemand %></td>
    <td><%= jobdemand.overview %></td>
    <td><%= link_to "#{jobdemand.company.name}", jobdemand.company %></td>
  </tr>
  </tbody>
<% end %>
</table>
<% end %>
