<%= render layout: 'shared/search_box' do %>

<h3 ><strong>Student</strong></h3>

  <div class="form-group">
   <div class="col-xs-8">
    <label class="control-label" for="">NAME</label>
      <%= f.text_field :name, class: 'form-control'  %>
   </div>
  </div>

  <div class="form-group">
   <div class="col-xs-8">
   <label class="control-label" for="">UNIVERSITY</label>
      <%= f.text_field :university, class: 'form-control'  %>
   </div>
  </div>

  <div class="form-group">
  <div class="col-xs-8">
    <label class="control-label" for="">MAJOR</label>
      <%= f.text_field :major, class: 'form-control'  %>
  </div>
  </div>

  <div class="form-group">
  <div class="col-xs-8">
    <label class="control-label" for="">ACHIEVEMENT</label>
      <%= f.text_field :achievement, class: 'form-control'  %>
  </div>
  </div>

  <div class="form-group">
  <div class="col-xs-8">
    <label class="control-label" for="">HOPE</label>
      <%= f.text_field :hope, class: 'form-control'  %>
  </div>
  </div>

  <button class="btn btn-default btn-left" type="reset"> CLEAR </button>
  <button class="btn btn-default btn-primary" type="submit"><i class="fa fa-search"></i> SEARCH</button>

<% end %>
