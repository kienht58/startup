<!DOCTYPE html>
<html>
<head>
</head>

<%= render layout: 'shared/search_box' do %>
<div class="container">
  <p id="notice"><%= notice %></p>

<h1 style="text-align:center">Students</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>University</th>
      <th>Major</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.university %></td>
        <td><%= student.major %></td>
        <td><button class="btn btn-success"><%= link_to 'Show', student %></button> </td>
        <td><button class="btn btn-info"><%= link_to 'Edit', edit_student_path(student) %></button> </td>
        <td><button class="btn btn-danger"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></button> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-success"><%= link_to 'New student', new_student_path %></button> 
</div>


<% end %>

</html>

