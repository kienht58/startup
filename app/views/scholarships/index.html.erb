<!DOCTYPE html>
<html>
<head>
</head>

<%= render layout: 'shared/search_box' do %>

<div class="container">
    <p id="notice"><%= notice %></p>

<h1 style="text-align:center">Listing Scholarships</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Sponsor</th>
      <th>Award</th>
      <th>Requirements</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Content</th>
      <th>Contact</th>
      <th>University</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scholarships.each do |scholarship| %>
      <tr>
        <td><%= scholarship.title %></td>
        <td><%= scholarship.sponsor %></td>
        <td><%= scholarship.award %></td>
        <td><%= scholarship.requirements %></td>
        <td><%= scholarship.start_time %></td>
        <td><%= scholarship.end_time %></td>
        <td><%= scholarship.content %></td>
        <td><%= scholarship.contact %></td>
        <td><button class="btn btn-success"><%= link_to 'Show', [scholarship.university, scholarship] %></button> </td>
        <td><button class="btn btn-info"><%= link_to 'Edit', edit_university_scholarship_path(scholarship.university, scholarship) %></button> </td>
        <td><button class="btn btn-danger"><%= link_to 'Destroy', [scholarship.university, scholarship], method: :delete, data: { confirm: 'Are you sure?' } %></button> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>

<button class="btn btn-success"><%= link_to 'New Scholarship', new_university_scholarship_path %></button> 

</div>

</html>
