<!DOCTYPE html>
<html>
<head>
</head>

<%= render layout: 'shared/search_box' do %>
<div class="container">
  <p id="notice"><%= notice %></p>

<h1 style="text-align:center">Listing Admissions</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Content</th>
      <th>Requirements</th>
      <th>Demands</th>
      <th>Contact</th>
      <th>University</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admissions.each do |admission| %>
      <tr>
        <td><%= admission.title %></td>
        <td><%= admission.start_time %></td>
        <td><%= admission.end_time %></td>
        <td><%= admission.content %></td>
        <td><%= admission.requirements %></td>
        <td><%= admission.demands %></td>
        <td><%= admission.contact %></td>
        <td><button class="btn btn-success"><%= link_to 'Show', [admission.university, admission] %></button> </td>
        <td><button class="btn btn-info"><%= link_to 'Edit', edit_university_admission_path(admission.university, admission) %></button> </td>
        <td><button class="btn btn-danger"><%= link_to 'Destroy', [admission.university, admission], method: :delete, data: { confirm: 'Are you sure?' } %></button> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-success"><%= link_to 'New Admission', new_university_admission_path %></button> 

<% end %>
</div>


</html>

