<%= render layout: 'shared/search_box' do %>

<h3 ><strong>University</strong></h3>

  <div class="form-group">
   <div class="col-xs-8">
    <label class="control-label" for="">NAME</label>
      <%= f.text_field :name, class: 'form-control'  %>
   </div>
  </div>

  <div class="form-group">
   <div class="col-xs-8">
   <label class="control-label" for="">LOCATION</label>
      <%= f.text_field :location, class: 'form-control'  %>
   </div>
  </div>

  <div class="form-group">
  <div class="col-xs-8" ng-class="{'has-success':form.rank.$valid && form.rank.$dirty,'has-error':form.rank.$dirty}">
    <label class="control-label" for="">RANK</label>
      <%= f.text_field :rank, class: 'form-control'  %>
  </div>
  </div>

  <div class="form-group">
  <div class="col-xs-8" ng-class="{'has-success':form.reputation.$valid && form.reputation.$dirty,'has-error':form.reputation.$dirty}">
    <label class="control-label" for="">REPUTATION</label>
      <%= f.text_field :reputation, class: 'form-control'  %>
  </div>
  </div>

  <button class="btn btn-default btn-left" type="reset"> CLEAR </button>
  <button class="btn btn-default btn-primary" type="submit"><i class="fa fa-search"></i> SEARCH</button>

<% end %>


