<!DOCTYPE html>
<html>
<head>
</head>

<%= render layout: 'shared/search_box' do %>

<p id="notice"><%= notice %></p>

<h1 style="text-align:center">Listing Universities</h1>

<table class="table table-striped table-border">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Introduction</th>
      <th>Contact</th>
      <th>Cooperation</th>
      <th>Rank</th>
      <th>Reputation</th>
      <th>Checked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= university.name %></td>
        <td><%= university.location %></td>
        <td><%= university.introduction %></td>
        <td><%= university.contact %></td>
        <td><%= university.cooperation %></td>
        <td><%= university.rank %></td>
        <td><%= university.reputation %></td>
        <td><%= university.checked %></td>
        <td><button class="btn btn-success"><%= link_to 'Show', university %></button> </td>
        <td><button class="btn btn-info"><%= link_to 'Edit', edit_university_path(university) %></td></button> 
        <td><button class="btn btn-danger"><%= link_to 'Destroy', university, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-info"><%= link_to 'New University', new_university_path %></button> 
<% end %>

</html>