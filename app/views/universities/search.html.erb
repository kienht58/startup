<% content_for(:title) do %>
  SEARCH
<% end %>

<%= form_for(@university, url: search_universities_path,  html: { method: :get, class: 'form-horizontal', role: 'form'}) do |f| %>
  <%= render 'search_form', f: f %>
<% end %>

<%= render layout: 'shared/search_result_box' do %>
  <table class="table table-list ">
  <thead>
    <tr>
      <th>NAME</th>
      <th>LOCATION</th>
      <th>RANK</th>
      <th>REPUTATION</th>
    </tr>
  </thead>
  <% @universities.each do |university| %>
  <tbody>
  <tr>
    <td><%= link_to "#{university.name}", university %></td>
    <td><%= university.location %></td>
    <td><%= university.rank %></td>
    <td><%= university.reputation %></td>
  </tr>
  </tbody>
<% end %>
</table>
<% end %>
