 <div>
       <% if current_user.email == @university.email then %>
       <br /> <%= link_to 'List of Study-Abroads', university_study_abroads_path(@university) %><br />

       <% else %>

        <table class="table table-list ">
         <thead>
          <tr>
           <th>TITLE</th>
           <th>DESTINATION</th>
           <th>START</th>
           <th>DURATION</th>
           <th>SPONSOR</th>
           <th>REQUIREMENT</th>
           </tr>
           </thead>
          <% @university.study_abs.each do |admission| %>
          <tbody>
           <tr>
           <td><%= admission.title %></td>
           <td><%= admission.destination %></td>
           <td><%= admission.start_time %></td>
           <td><%= 
           <td><%= admission.sponsor %></td>
           <td><%= admission.requirements %></td>
           </tr>
           </tbody>
           <% end %>
          </table>
      <% end %>
       </div>

<% 
=end
%>


    </section>

    <section id="right">
      <div class="gcontent">
        <div class="head"><h1>Cooperation</h1></div>
        <div class="boxy">          
<% 
=begin
%>
          <div class="cooperate-college">
            <a href="https://foursquare.com/"><img src="http://a1503yi.ojiji.net/foursquare-badge.png" /><%= @university.cooperation %></a>
          </div>
          
          <span><a href="#">See all...</a></span>
        </div>
<%
=end
%>
      </div>

      <br/>
      
      <div class="gcontent">
        <div class="head"><h1>Course available</h1></div>
        <div class="boxy">
<%
=begin
%>
          <div class="teacherlist clearfix">
            <% @university.courses.each do |course| %>
              <a href="#"><img src="img/friend_avatar_default.jpg" width="30" height="30" alt="course-image" />
              </a><span class="teacher-title"><a href="#"><%= link_to course.name, university_course_path(course.university, course) %></a></span>
            <% end %>
            <br />
            <%= link_to 'New Course', new_university_course_path(@university) %><br />
          </div>
          
          <span><a href="#">See all...</a></span>
<%
=end
%>
        </div>
      </div>


      <div class="gcontent">
        <div class="head" style="margin-bottom : 0px" > <h1>Support contact</h1></div>
        <div class="body" style="background-color:#f5f5f5;" style="margin-top : 0px"  >
          <h6><%= simple_format(h @university.contact) %></h6>
        </div>
    </section>


    
  </div>
 
</div>

<% end %>

</html>
