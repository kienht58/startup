<!DOCTYPE html>
<html>
<head>
</head>

<%= render layout: 'shared/search_box' do %>
<div class="container">
  <p id="notice"><%= notice %></p>

<h1 style="text-align:center">Listing Study Aboards</h1>

<table>
  <thead class="table tabel-striped table-bordered">
    <tr>
      <th>Title</th>
      <th>Destination</th>
      <th>Start time</th>
      <th>Duration</th>
      <th>Sponsor</th>
      <th>Requirements</th>
      <th>Content</th>
      <th>Contact</th>
      <th>University</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_aboards.each do |study_aboard| %>
      <tr>
        <td><%= study_aboard.title %></td>
        <td><%= study_aboard.destination %></td>
        <td><%= study_aboard.start_time %></td>
        <td><%= study_aboard.duration %></td>
        <td><%= study_aboard.sponsor %></td>
        <td><%= study_aboard.requirements %></td>
        <td><%= study_aboard.content %></td>
        <td><%= study_aboard.contact %></td>
        <td><button class="btn btn-success"><%= link_to 'Show', [study_aboard.university, study_aboard] %></button> </td>
        <td> <button class="btn btn-info"><%= link_to 'Edit', edit_university_study_aboard_path(study_aboard.university, study_aboard) %></button> </td>
        <td><button class="btn btn-danger"><%= link_to 'Destroy', [study_aboard.university, study_aboard], method: :delete, data: { confirm: 'Are you sure?' } %></button> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-success"><%= link_to 'New Study Aboard', new_university_study_aboard_path %></button> 
</div>


<% end %>

</html>


