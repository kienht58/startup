<!DOCTYPE html>
<html>
<head>
</head>

<%= render layout: 'shared/search_box' do %>

 <h1 style="text-align:center">Companies</h1>

<div class="container">
    <table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>President</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.president %></td>
        <td><button class="btn btn-success"><%= link_to 'Show', company %></button> </td>
        <td><button class="btn btn-info"><%= link_to 'Edit', edit_company_path(company) %></button> </td>
        <td><button class="btn btn-danger"><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></button> </td>
      </tr>
    <% end %>
  </tbody>
</table>
    <button class="btn btn-success"><%= link_to 'New Company', new_company_path %></button>
</div>

<br>
<% end %>

</html>


